  <button onclick="guardar()" class="bg-green-600 hover:bg-green-700 py-2 px-4 rounded">Guardar Cambios</button>
  <script>
    var ajustes = JSON.parse(localStorage.getItem("ajustesLzPlay")) || {};
    document.getElementById("efecto").value = ajustes.efecto || "";
    function guardar() {
      ajustes.efecto = document.getElementById("efecto").value;
      localStorage.setItem("ajustesLzPlay", JSON.stringify(ajustes));
      alert("Ajustes guardados. Regresa a la app para ver los cambios.");
    }
  </script>
